{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-native",
    "strict": true,
    "lib": ["ES2020", "ES2021.Intl"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["App.tsx", "src/**/*"]
}
